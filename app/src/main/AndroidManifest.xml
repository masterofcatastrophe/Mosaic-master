<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="codesages.mosaic">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".contactsScreen"
            android:label="@string/title_activity_contacts_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".splashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mosaicsListScreen"
            android:label="@string/title_activity_mosaics_list_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".contactDetailScreen"
            android:label="@string/title_activity_contact_detail_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MosaicCreationScreen" />
        <activity android:name=".editMosaic" />
        <activity android:name=".ContactPickActivity"></activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>